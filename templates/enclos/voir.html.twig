{% extends 'base.html.twig' %}

{% block title %}Animaux dans l'enclos : {{ enclo.nom }}{% endblock %}

{% block body %}
    <h1 class="mb-4">Détails de : {{ enclo.nom }}</h1>
    <hr>

    <div class="row mb-5">
        <div class="col-md-6">
            <h2 class="h4">Informations sur l'enclos</h2>
            <ul class="list-group">
                <li class="list-group-item">
                    ID : {{ enclo.id }}
                </li>
                <li class="list-group-item">
                    Superficie : {{ enclo.superficie }} m²
                </li>
                <li class="list-group-item">
                    Capacité Max : {{ enclo.capaciteMax }} animaux
                </li>
                <li class="list-group-item">
                    Espace rattaché : {{ enclo.espace.nom ?? 'N/A' }}
                </li>
            </ul>
        </div>
    </div>

    <h2 class="mt-5">Liste des {{ animalsInEnclos|length }} Animaux</h2>

    {% if animalsInEnclos is empty %}
        <p class="alert alert-info">Cet enclos est vide. Aucun animal à afficher.</p>
    {% else %}
        <table class="table table-striped table-hover text-white">
            <thead>
            <tr>
                <th>ID</th>
                <th>Numéro d'Identification</th>
                <th>Nom</th>
                <th>Espèce</th>
                <th>Sexe</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for animal in animalsInEnclos %}
                <tr>
                    <td>{{ animal.id }}</td>
                    <td>{{ animal.numeroIdentification }}</td>
                    <td>{{ animal.nom ?? 'N/A' }}</td>
                    <td>{{ animal.espece }}</td>
                    <td>{{ animal.sexe }}</td>
                    <td>
                        {% if animal.esEnQuarantaine %}
                            <span class="badge text-bg-warning">Quarantaine</span>
                        {% elseif animal.sterilise %}
                            <span class="badge text-bg-secondary">Stérilisé</span>
                        {% else %}
                            <span class="badge text-bg-success">Normal</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_animaux_show', {'id': animal.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        <a href="{{ path('app_animaux_edit', {'id': animal.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <a href="{{ path('app_enclos_index') }}" class="btn btn-secondary mt-3">Retour à la liste des enclos</a>
{% endblock %}
