{% extends 'base.html.twig' %}

{% block title %}Espace{% endblock %}

{% block body %}
    <h1>Espace</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ espace.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ espace.Nom }}</td>
            </tr>
            <tr>
                <th>Superficie</th>
